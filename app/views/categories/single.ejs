<!DOCTYPE html>
<html lang="fr">
<head>
    <%- include('../partials/head', {title: 'Category ' + category.name + ' | Category Manager'}); %>
</head>
<body>
<div class="container">
    <div class="px-4 py-5 text-center">
        <h1 class="display-5 fw-bold">DÉTAILS DE LA CATÉGORIE</h1>
    </div>
    <div class="row col-8 mx-auto my-5">
        <div class="card shadow p-4 bg-light">
            <div class="card-header text-center bg-light py-3">
                <h2 class="card-title mb-0"><strong><%= category.name %></strong></h2>
            </div>
            <div class="card-body">
                <h3 class="card-subtitle mb-2 text-muted">Description :</h3>
                <p class="card-text"><%= category.description %></p>
            </div>
            <div class="card-body">
                <h3 class="card-subtitle mb-2 text-muted">Livres dans cette catégorie :</h3>
                <% if (books.length > 0) { %>
                    <ul class="list-group">
                        <% books.forEach(book => { %>
                            <li class="list-group-item">
                                <strong>Titre :</strong> <%= book.title %><br>
                                <strong>Auteur :</strong> <%= book.author %><br>
                                <strong>Statut :</strong>
                                <% if (book.status) { %>
                                    <span class="badge bg-success">Disponible</span>
                                <% } else { %>
                                    <span class="badge bg-secondary">Indisponible</span>
                                <% } %>
                            </li>
                        <% }) %>
                    </ul>
                <% } else { %>
                    <p class="card-text">Aucun livre dans cette catégorie.</p>
                <% } %>
            </div>
            <div class="card-footer bg-light">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <a href="/categories/<%= category._id %>/edit/" class="btn btn-warning me-2">MODIFIER</a>
                        <a href="/categories/<%= category._id %>/delete" class="btn btn-danger me-2">SUPPRIMER</a>
                    </div>
                    <div>
                        <a href="/categories" class="btn btn-outline-secondary">RETOUR</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</body>
</html>